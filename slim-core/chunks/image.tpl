<div class="gallery-item">
    <a id="image-[[+idx]]" href="[[++request_uri]]#lightbox-[[+idx]]" class="image" style="background-image: url([[+thumb]]);">
        <p>[[+alt]]</p>
    </a>
    <a id="lightbox-[[+idx]]" href="[[++request_uri]]#_" class="takeover">
        <figure
            class="lightbox"
            style="background-image: url([[+url]]); width: [[+file_width]]px; height: [[+file_height]]px;"
        >
            <figcaption>[[+description]]</figcaption>
        </figure>
    </a>
</div>
